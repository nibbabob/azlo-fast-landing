---
// src/pages/index.astro (TEMPLATE REPO)
import '../styles/global.css';

// --- CONFIGURATION (Environment Variables with Defaults) ---

// 1. BRANDING & STYLE
const siteName = import.meta.env.PUBLIC_SITE_NAME || "StartupLaunch";
const primaryColor = import.meta.env.PUBLIC_COLOR_PRIMARY || "#38bdf8"; // Default Cyan
const bgColor = import.meta.env.PUBLIC_COLOR_BG || "#0f172a"; // Default Dark Blue
const logoText = import.meta.env.PUBLIC_LOGO_TEXT || "üöÄ Launch";

// 2. HERO SECTION
const heroBadge = import.meta.env.PUBLIC_HERO_BADGE || "New v2.0 Released";
const heroTitle = import.meta.env.PUBLIC_HERO_TITLE || "Ship your startup in days, not weeks.";
const heroSubtitle = import.meta.env.PUBLIC_HERO_SUBTITLE || "The all-in-one template designed to convert visitors into customers. Fast, secure, and fully customizable.";
const ctaMain = import.meta.env.PUBLIC_CTA_MAIN || "Get Started Free";
const ctaMainLink = import.meta.env.PUBLIC_CTA_MAIN_LINK || "#pricing";
const ctaSecondary = import.meta.env.PUBLIC_CTA_SEC || "View Live Demo";

// 3. FEATURES (Grid of 3)
const f1Title = import.meta.env.PUBLIC_F1_TITLE || "Blazing Fast";
const f1Desc = import.meta.env.PUBLIC_F1_DESC || "Optimized for speed. Achieve 100/100 Lighthouse scores automatically.";
const f2Title = import.meta.env.PUBLIC_F2_TITLE || "Secure by Default";
const f2Desc = import.meta.env.PUBLIC_F2_DESC || "Enterprise-grade security headers and sanitation out of the box.";
const f3Title = import.meta.env.PUBLIC_F3_TITLE || "Analytics Ready";
const f3Desc = import.meta.env.PUBLIC_F3_DESC || "Integrated with Google Analytics, Plausible, or your tool of choice.";

// 4. PRICING (Simple monthly)
const priceAmount = import.meta.env.PUBLIC_PRICE_AMOUNT || "$29";
const pricePeriod = import.meta.env.PUBLIC_PRICE_PERIOD || "/month";

// 5. FOOTER
const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL || "hello@example.com";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{heroTitle} | {siteName}</title>
        <meta name="description" content={heroSubtitle} />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
	</head>
	<body>
        <style define:vars={{ primaryColor, bgColor }}>
            :root { 
                --user-primary: var(--primaryColor);
                --bg-color: var(--bgColor);
            }
            body {
                background-color: var(--bg-color);
                color: #f8fafc; /* Default text white */
            }
            /* Utility for Feature Icons */
            .icon-box { 
                color: var(--user-primary); 
                background: rgba(255,255,255,0.05); 
                width: 50px; height: 50px; 
                display: flex; align-items: center; justify-content: center; 
                border-radius: 12px; margin-bottom: 1rem; 
                font-size: 1.5rem;
            }
        </style>

        <div class="bg-glow"></div>

        <nav class="glass-panel nav-bar">
            <div class="container nav-content">
                <div class="logo text-gradient">{logoText}</div>
                <div class="nav-links">
                    <a href="#features">Features</a>
                    <a href="#pricing">Pricing</a>
                    <a href="#faq">FAQ</a>
                </div>
                <a href={ctaMainLink} class="btn btn-primary btn-sm">{ctaMain}</a>
            </div>
        </nav>

		<main>
            <section class="hero">
                <div class="container">
                    <div class="hero-content">
                        <span class="badge">{heroBadge}</span>
                        <h1 class="text-gradient">{heroTitle}</h1>
                        <p class="subtitle">{heroSubtitle}</p>
                        
                        <div class="cta-group">
                            <a href={ctaMainLink} class="btn btn-primary">{ctaMain}</a>
                            <a href="#" class="btn btn-secondary">{ctaSecondary}</a>
                        </div>

                        <div class="hero-visual animate-float">
                            <div class="glass-panel visual-card">
                                <div class="window-dots">
                                    <span></span><span></span><span></span>
                                </div>
                                <div class="visual-content">
                                    <div class="app-ui-header">
                                        <div class="app-logo-mini">{siteName}</div>
                                        <div class="app-user-circle"></div>
                                    </div>
                                    <div class="app-ui-body">
                                        <div class="app-hero-box">
                                            <div class="skeleton-text sm"></div>
                                            <div class="skeleton-graph"></div>
                                        </div>
                                        <div class="app-grid-row">
                                            <div class="app-box"></div>
                                            <div class="app-box"></div>
                                            <div class="app-box"></div>
                                        </div>
                                    </div>
                                </div>
                                </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="logos">
                <div class="container">
                    <p>TRUSTED BY INNOVATIVE TEAMS</p>
                    <div class="logo-grid">
                        <span>ACME Corp</span>
                        <span>Stark Ind</span>
                        <span>Wayne Ent</span>
                        <span>Cyberdyne</span>
                    </div>
                </div>
            </section>

            <section id="features" class="features">
                <div class="container">
                    <div class="section-header">
                        <h2>Everything you need</h2>
                        <p>We handled the boring stuff so you can focus on the product.</p>
                    </div>
                    <div class="grid-3">
                        <div class="glass-panel feature-card">
                            <div class="icon-box">‚ö°</div>
                            <h3>{f1Title}</h3>
                            <p>{f1Desc}</p>
                        </div>
                        <div class="glass-panel feature-card">
                            <div class="icon-box">üõ°Ô∏è</div>
                            <h3>{f2Title}</h3>
                            <p>{f2Desc}</p>
                        </div>
                        <div class="glass-panel feature-card">
                            <div class="icon-box">üìà</div>
                            <h3>{f3Title}</h3>
                            <p>{f3Desc}</p>
                        </div>
                    </div>
                </div>
            </section>

            <section id="pricing" class="pricing">
                <div class="container">
                    <div class="glass-panel pricing-card">
                        <h3>Simple Pricing</h3>
                        <div class="price">
                            <span class="amount">{priceAmount}</span>
                            <span class="period">{pricePeriod}</span>
                        </div>
                        <p>One plan, all features. No hidden fees.</p>
                        <ul class="checklist">
                            <li>‚úÖ Unlimited Projects</li>
                            <li>‚úÖ Custom Domain</li>
                            <li>‚úÖ 24/7 Support</li>
                            <li>‚úÖ Analytics Dashboard</li>
                        </ul>
                        <a href={ctaMainLink} class="btn btn-primary btn-block">{ctaMain}</a>
                    </div>
                </div>
            </section>

            <section id="faq" class="faq">
                <div class="container">
                    <div class="section-header">
                        <h2>Frequently Asked Questions</h2>
                    </div>
                    <div class="faq-grid">
                        <div class="glass-panel faq-item">
                            <h4>Is this template free?</h4>
                            <p>Yes, it is open source and free to use for personal and commercial projects.</p>
                        </div>
                        <div class="glass-panel faq-item">
                            <h4>How do I deploy this?</h4>
                            <p>Simply click the deploy button on your host of choice and set the Environment Variables.</p>
                        </div>
                    </div>
                </div>
            </section>
            
            <footer>
                <div class="container footer-content">
                    <div class="footer-col">
                        <div class="logo">{siteName}</div>
                        <p class="tiny">¬© {new Date().getFullYear()} All rights reserved.</p>
                    </div>
                    <div class="footer-col">
                        <p>Contact</p>
                        <a href={`mailto:${contactEmail}`}>{contactEmail}</a>
                    </div>
                </div>
            </footer>
		</main>

        <style>
            /* Page-Specific Styles */
            
            /* Nav */
            .nav-bar {
                position: fixed; top: 20px; left: 50%; transform: translateX(-50%);
                width: 90%; max-width: 1000px; z-index: 100;
                border-radius: 100px; padding: 0.8rem 0;
                backdrop-filter: blur(12px);
                background: rgba(15, 23, 42, 0.6);
            }
            .nav-content { display: flex; justify-content: space-between; align-items: center; }
            .logo { font-weight: 800; font-size: 1.2rem; letter-spacing: -0.02em; }
            
            /* Text Gradient Helper */
            .text-gradient {
                background: linear-gradient(135deg, #fff 0%, var(--user-primary) 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .nav-links { display: flex; gap: 2rem; }
            .nav-links a { color: var(--text-muted); text-decoration: none; font-size: 0.9rem; font-weight: 500; transition: color 0.2s;}
            .nav-links a:hover { color: #fff; }

            /* Hero */
            .hero { padding: 10rem 0 5rem; text-align: center; }
            .badge { 
                background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); 
                color: var(--user-primary); font-size: 0.8rem; padding: 0.4rem 1rem; 
                border-radius: 50px; text-transform: uppercase; letter-spacing: 1px; font-weight: 700;
                margin-bottom: 1.5rem; display: inline-block;
            }
            h1 { font-size: clamp(3rem, 5vw, 4.5rem); line-height: 1.1; font-weight: 800; margin-bottom: 1.5rem; letter-spacing: -0.03em; color: white;}
            .subtitle { font-size: 1.2rem; color: #94a3b8; max-width: 600px; margin: 0 auto 2.5rem; }
            .cta-group { display: flex; gap: 1rem; justify-content: center; margin-bottom: 4rem; }

            /* Buttons */
            .btn-primary { 
                background: var(--user-primary); color: #000; padding: 0.8rem 1.5rem; 
                border-radius: 8px; font-weight: 600; text-decoration: none; transition: opacity 0.2s;
            }
            .btn-primary:hover { opacity: 0.9; }
            .btn-secondary {
                background: rgba(255,255,255,0.1); color: #fff; padding: 0.8rem 1.5rem; 
                border-radius: 8px; font-weight: 600; text-decoration: none; transition: background 0.2s;
            }
            .btn-secondary:hover { background: rgba(255,255,255,0.15); }
            .btn-sm { padding: 0.5rem 1rem; font-size: 0.9rem; }

            /* Hero Visual */
            .hero-visual { max-width: 800px; margin: 0 auto; perspective: 1000px; }
            .visual-card { 
                height: 350px; border-radius: 16px; padding: 1rem; text-align: left;
                background: rgba(30, 41, 59, 0.5); /* Semi-transparent card base */
                border: 1px solid rgba(255,255,255,0.1);
                display: flex; flex-direction: column;
                box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5);
            }
            .window-dots { display: flex; gap: 6px; margin-bottom: 1.5rem; padding-left: 0.5rem; }
            .window-dots span { width: 10px; height: 10px; border-radius: 50%; background: rgba(255,255,255,0.1); }

            /* ABSTRACT APP UI (Replaces the Terminal Text) */
            .visual-content { flex: 1; display: flex; flex-direction: column; gap: 1rem; padding: 0 1rem 1rem; opacity: 0.8; }
            
            .app-ui-header { display: flex; justify-content: space-between; align-items: center; padding-bottom: 1rem; border-bottom: 1px solid rgba(255,255,255,0.05); }
            .app-logo-mini { font-weight: 700; font-size: 0.9rem; color: var(--user-primary); }
            .app-user-circle { width: 24px; height: 24px; border-radius: 50%; background: rgba(255,255,255,0.2); }
            
            .app-ui-body { display: flex; flex-direction: column; gap: 1rem; height: 100%; }
            .app-hero-box { 
                background: rgba(255,255,255,0.03); border-radius: 8px; padding: 1.5rem; 
                flex-grow: 1; display: flex; flex-direction: column; justify-content: center; gap: 1rem;
            }
            .skeleton-text { height: 10px; width: 40%; background: rgba(255,255,255,0.1); border-radius: 4px; }
            .skeleton-graph { 
                height: 60px; width: 100%; border-radius: 6px; 
                background: linear-gradient(90deg, var(--user-primary) 0%, transparent 80%); 
                opacity: 0.2; 
            }
            
            .app-grid-row { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem; height: 80px; }
            .app-box { background: rgba(255,255,255,0.03); border-radius: 8px; }

            /* Social Proof */
            .logos { text-align: center; padding: 2rem 0; opacity: 0.5; margin-top: 2rem; }
            .logos p { font-size: 0.75rem; letter-spacing: 1px; margin-bottom: 1rem; color: #94a3b8; }
            .logo-grid { display: flex; gap: 3rem; justify-content: center; font-weight: 700; font-size: 1.2rem; color: #cbd5e1; flex-wrap: wrap;}

            /* Sections */
            section { padding: 5rem 0; }
            .section-header { text-align: center; margin-bottom: 4rem; }
            .section-header h2 { font-size: 2.5rem; margin-bottom: 1rem; color: white; }
            .section-header p { color: #94a3b8; font-size: 1.1rem; }

            /* Grids */
            .grid-3 { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; }
            .feature-card { 
                padding: 2.5rem; border-radius: 20px; transition: transform 0.3s; 
                background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.05);
            }
            .feature-card:hover { transform: translateY(-5px); border-color: var(--user-primary); }
            .feature-card h3 { margin-bottom: 0.5rem; font-size: 1.25rem; color: white; }
            .feature-card p { color: #94a3b8; line-height: 1.6; }

            /* Pricing */
            .pricing-card { 
                max-width: 450px; margin: 0 auto; padding: 3rem; border-radius: 24px; text-align: center; 
                border: 1px solid var(--user-primary); /* Highlight border */
                background: rgba(30, 41, 59, 0.4); backdrop-filter: blur(10px);
            }
            .pricing-card h3 { color: white; font-size: 1.5rem; }
            .price { margin: 1.5rem 0; }
            .amount { font-size: 3.5rem; font-weight: 800; color: white; }
            .period { color: #94a3b8; font-size: 1.2rem; }
            .checklist { list-style: none; text-align: left; margin: 2rem 0; padding-left: 1rem;}
            .checklist li { margin-bottom: 0.8rem; color: #cbd5e1; }
            .btn-block { width: 100%; display: block; text-align: center; }

            /* FAQ */
            .faq-grid { display: grid; gap: 1.5rem; max-width: 800px; margin: 0 auto; }
            .faq-item { padding: 2rem; border-radius: 12px; background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05); }
            .faq-item h4 { margin-bottom: 0.5rem; color: white; font-size: 1.1rem; }
            .faq-item p { color: #94a3b8; font-size: 0.95rem; line-height: 1.6; }

            /* Footer */
            footer { border-top: 1px solid rgba(255,255,255,0.1); padding: 3rem 0; margin-top: 4rem; }
            .footer-content { display: flex; justify-content: space-between; flex-wrap: wrap; gap: 2rem; }
            .tiny { font-size: 0.8rem; color: #64748b; margin-top: 0.5rem; }
            .footer-col a { color: #94a3b8; text-decoration: none; transition: color 0.2s; }
            .footer-col a:hover { color: var(--user-primary); }

            @media (max-width: 768px) {
                .nav-links { display: none; }
                h1 { font-size: 2.5rem; }
                .logo-grid { gap: 1.5rem; }
                .grid-3 { grid-template-columns: 1fr; }
            }
        </style>
	</body>
</html>