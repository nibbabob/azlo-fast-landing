---
// src/pages/index.astro (i Template Repo)
import '../styles/global.css';

// 1. GENERELT & DESIGN
const title = import.meta.env.PUBLIC_HERO_TITLE || "Velkommen til din nye side";
const subtitle = import.meta.env.PUBLIC_HERO_SUBTITLE || "Dette er en lynhurtig landingsside.";
const siteName = import.meta.env.PUBLIC_SITE_NAME || "Mit Firma";

// Farver (Standard bl√• hvis intet v√¶lges)
const primaryColor = import.meta.env.PUBLIC_COLOR_PRIMARY || "#2563eb";
const bgColor = import.meta.env.PUBLIC_COLOR_BG || "#f8fafc";

// 2. HERO ACTION
const ctaLink = import.meta.env.PUBLIC_CTA_LINK || "#";
const ctaText = import.meta.env.PUBLIC_CTA_TEXT || "Kontakt Os";

// 3. FEATURES (3 salgsargumenter)
const feat1Title = import.meta.env.PUBLIC_FEAT1_TITLE || "Lynhurtig";
const feat1Desc = import.meta.env.PUBLIC_FEAT1_DESC || "Siden loader p√• under 1 sekund.";

const feat2Title = import.meta.env.PUBLIC_FEAT2_TITLE || "Mobilvenlig";
const feat2Desc = import.meta.env.PUBLIC_FEAT2_DESC || "Ser perfekt ud p√• alle enheder.";

const feat3Title = import.meta.env.PUBLIC_FEAT3_TITLE || "SEO Optimeret";
const feat3Desc = import.meta.env.PUBLIC_FEAT3_DESC || "Google elsker ren HTML og hastighed.";

// 4. FOOTER
const footerEmail = import.meta.env.PUBLIC_FOOTER_EMAIL || "";
const footerPhone = import.meta.env.PUBLIC_FOOTER_PHONE || "";
---

<html lang="da">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | {siteName}</title>
        <meta name="description" content={subtitle} />
	</head>
	<body>
        <style define:vars={{ primaryColor, bgColor }}>
            :root {
                --user-primary: var(--primaryColor);
                --user-bg: var(--bgColor);
            }
            body { background-color: var(--user-bg); }
            .cta-button { background-color: var(--user-primary); }
            .feature-icon { color: var(--user-primary); }
            .logo { color: var(--user-primary); }
        </style>

        <nav>
            <div class="logo">{siteName}</div>
            <a href={ctaLink} class="nav-cta">Kontakt</a>
        </nav>

		<main class="landing-container">
            <section class="hero">
                <span class="badge">High Performance</span>
			    <h1>{title}</h1>
                <p class="subtitle">{subtitle}</p>
                
                <a href={ctaLink} class="cta-button">
                    {ctaText} &rarr;
                </a>
            </section>

            <section class="features">
                <div class="feature-card">
                    <div class="feature-icon">‚ö°</div>
                    <h3>{feat1Title}</h3>
                    <p>{feat1Desc}</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üì±</div>
                    <h3>{feat2Title}</h3>
                    <p>{feat2Desc}</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üîç</div>
                    <h3>{feat3Title}</h3>
                    <p>{feat3Desc}</p>
                </div>
            </section>
            
            <footer>
                <div class="contact-info">
                    {footerEmail && <p>üìß {footerEmail}</p>}
                    {footerPhone && <p>üìû {footerPhone}</p>}
                </div>
                <p class="copyright">¬© {new Date().getFullYear()} {siteName}. <br/><span class="tiny">Powered by <a href="https://www.azlo.pro" target="_blank">Azlo.pro Engine</a></span></p>
            </footer>
		</main>
	</body>
</html>